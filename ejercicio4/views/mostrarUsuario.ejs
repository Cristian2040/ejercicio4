<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Web responsive</title>
    <link rel="stylesheet" href="css/estilostabla.css">
</head>
<body>
    <h1>Autores de música clásica</h1>
    <div id="contenedor">
        <div class="otro"></div>
        <table>
            <thead>
                <tr>
                    <th>id</th>
                    <th>nombre</th>
                    <th>correo</th>
                    <th>celular</th>
                    <th>dirección</th>
                </tr>
            </thead>
            <tbody>
                <% if (Array.isArray(usuariosBD) && usuariosBD.length > 0) { %>
                    <% usuariosBD.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.idusuario %></td>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.correo %></td>
                            <td><%= usuario.celular %></td>
                            <td>
                                <a href="/editarUsuario/<%= usuario.idusuario %>">Editar</a>
                                <a href="/borrarUsuario/<%= usuario.idusuario %>">Borrar</a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5">No hay usuarios disponibles</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
